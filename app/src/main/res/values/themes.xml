<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BlackBox" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorContainer">@color/gray02</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:buttonStyle">@style/lightButtonStyle</item>
    </style>
    <style name="lightButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>
    <style name="lightTextBoxStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/gray02</item>
        <item name="android:background">@drawable/bg_white_rounded</item>
    </style>

    <style name="Theme.BlackBox" parent="Base.Theme.BlackBox" />
</resources>