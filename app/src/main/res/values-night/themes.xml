<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BlackBox" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorBackgroundFloating">@color/black</item>
        <item name="colorContainer">@color/gray06</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:buttonStyle">@style/darkButtonStyle</item>
    </style>
    <style name="darkButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/primary_dark</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>
</resources>